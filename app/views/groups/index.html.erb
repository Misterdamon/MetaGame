<h2 class=""> My groups </h2>
<div class="container-fluid">
    <%= button_to "Browse Groups", show_groups_path, method: :get, class: "pull-right btn-primary" %>

    <% @my_groups.each do |group| %>
        <div class="media">
            <a class="pull-left" href=<%=group_path(group)%>>
            <img class="media-object border-white" src=<%="#{group.group_logo_url}"%> alt="...">
            </a>
        <div class="media-body">
            <h4 class="media-heading white-text"><%= group.group_name%></h4>
            <p class="white-text"><%= group.group_tagline %></p>
        </div>
</div>
    <% end %>

    <% unless @news_groups.empty? %>
    <h2> Suggested Groups </h2>
        <% @news_groups.each do |group| %>
            <p> <%= link_to group.group_name, group_path(group) %>  <%= button_to "Join Group", add_user_path(group), method: :post %></p>
        <% end %>
    <% end %>
</div>