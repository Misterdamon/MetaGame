<h1 class="title">GROUPS#INDEX</h1>
<h1>Listing groups</h1>

<table>
  <tr>
    <th>Group name</th>
    <th>Group description</th>
    <th>Group logo url</th>
    <th>Group tagline</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>


<% @groups.each do |group| %>
  <tr>
    <td><%= group.group_name %></td>
    <td><%= group.group_description %></td>
    <td><%= group.group_logo_url %></td>
    <td><%= group.group_tagline %></td>
    <td><%= link_to 'Join', add_user_path(group.id), method: :post %></td>
    <td><%= link_to 'Leave', remove_user_path(group.id), method: :post %></td>
    <td><%= link_to 'Show', group %></td>
    <td><%= link_to 'Edit', edit_group_path(group) %></td>
    <td><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

