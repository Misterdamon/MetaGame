<div class="container-fluid container-trans">
  <h1 class="title centered"><%= @user.username%></h1>
  <div class="body" style="overflow-y: scroll; height: 400px;">
  
  <% if current_user.id == @user.id  %>
    <div class="row=4">
      <%= button_to "Import your Steam games", '/auth/steam', class: 'col-md-3 btn btn-success' %>
      <%= link_to 'Edit Profile', edit_user_path(@user), class: "col-md-3 btn btn btn-default" %>
      <%= link_to "Create Event", new_event_path, class: "col-md-3 btn btn btn-default" %>   
      <%= link_to 'Create Group', new_group_path, class: "col-md-3 btn btn btn-default" %> 
    </div>
  <% end  %>
  <br>
  <br>


  <div class="container row=6">
    <%= notice %>
    <h3 class>Profile Info</h3>
    
    <dl class='list-unstyled'>
      <dt>Username</dt>
     <dd class=""> <%= @user.username %> </dd>
    
     <dt>Email</dt>
     <dd class=""> <%= @user.user_email %> </dd>
    
     <dt>Bio</dt>
     <dd class=""> <%= @user.user_bio %> </dd>
    </dl>
    
  </div>

  <h2>USERS GAMES</h2>
    <div class='row'>
      <% cache do %>
        <% @games.each do |game| %>
          <div class="col-lg-4 col-sm-6 col-xs-12">
            <section class="game-image"> <%= link_to image_tag(game.game_img_url), game_path(game) %>
            <span class="purple-text"><%= game.game_name %></span></section>
          </div>
        <% end %>
      <% end %>
    </div> 
  </div>
  
	</div>
</div>
